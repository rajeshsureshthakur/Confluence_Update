SELECT 
    "Application",
    "Value" as "CPU Value",
    CASE
        WHEN "Value" >= '90' THEN Critical
        WHEN "Value" >= '80' THEN Warning
        ELSE Normal
    END
FROM T1 
WHERE "Metric" LIKE 'JVM%CPU%'

UNION ALL

SELECT 
    "Application",
    "Value",
    CASE
        WHEN "Value" >= '90' THEN Critical
        WHEN "Value" >= '80' THEN Warning
        ELSE Normal
    END
FROM T2
WHERE "Metric" LIKE 'JVM%CPU%'

UNION ALL

SELECT 
    "Application",
    "Value",
    CASE
        WHEN "Value" >= '90' THEN Critical
        WHEN "Value" >= '80' THEN Warning
        ELSE Normal
    END
FROM T3
WHERE "Metric" LIKE 'JVM%CPU%'

UNION ALL

SELECT 
    "Application",
    "Value",
    CASE
        WHEN "Value" >= '90' THEN Critical
        WHEN "Value" >= '80' THEN Warning
        ELSE Normal
    END
FROM T4
WHERE "Metric" LIKE 'JVM%CPU%'
