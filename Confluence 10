SELECT 
    'Application',
    'Value' as 'CPU Value',
    CASE
        WHEN 'Value' >= 90 THEN 'ðŸ”´ Critical'
        WHEN 'Value' >= 80 THEN 'âš ï¸ Warning'
        ELSE 'âœ… Normal'
    END as 'Status'
FROM T1 
